# =============================================================================
# DATABASE (Supabase Postgres)
# =============================================================================
# Connection string for Prisma. Get this from Supabase Dashboard > Settings > Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# =============================================================================
# SUPABASE STORAGE
# =============================================================================
# Your Supabase project URL (e.g., https://abc123.supabase.co)
SUPABASE_URL=https://your-project-ref.supabase.co

# Service role key for server-side operations (KEEP SECRET - never expose to client!)
# Get this from Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Storage bucket name for avatar uploads (optional, defaults to 'avatars')
SUPABASE_STORAGE_BUCKET=avatars

# =============================================================================
# REDIS CACHE
# =============================================================================
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# =============================================================================
# GOOGLE OAUTH
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# AUTH
# =============================================================================
# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_key_for_auth_min_32_chars

# =============================================================================
# DISCOVER / SUGGESTIONS (External APIs)
# =============================================================================
# Ticketmaster Discovery API key â€” get free at https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=your_ticketmaster_api_key

# User-Agent for OpenStreetMap Nominatim requests (required by usage policy)
OSM_USER_AGENT=Koda/1.0 (your-email@example.com)

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
SENTRY_AUTH_TOKEN=your_sentry_token

# =============================================================================
# EMAIL NOTIFICATIONS (Resend)
# =============================================================================
# Enable or disable email notifications (default: false for dev)
EMAIL_ENABLED=false

# Resend API key for sending emails
RESEND_API_KEY=re_your_resend_api_key

# Sender email address for notifications
EMAIL_FROM=noreply@koda.app

